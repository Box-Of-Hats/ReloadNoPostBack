{
    "name": "No Postback Reload",
    "version": "1.0",
    "description": "Reload a page with a button press without a postback",
    "permissions": [
        "tabs",
        "background",
        "browsingData",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "64": "images/icon64.png"
        },
        "default_title": "Reload Page"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "windows": "Ctrl+R"
            }
        }
    }
}